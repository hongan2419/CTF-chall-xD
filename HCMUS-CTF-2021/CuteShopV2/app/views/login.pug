html 
    head 
        include includes/head.pug
    body 
        include includes/navbar.pug
        <div class="container" style="margin-top: 10%">
            <div class="card" style="width: 18rem; margin: auto">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <div>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password">
                        </div>
                        <button class="btn btn-primary" onclick="submit()">Submit</button>
                        <div id="message"></div>
                    </div>
                    <div class="form-group">
                        <h6 for="exampleInputEmail1">Don't have account?</h6>
                        <a href="/register">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
        script.
            function submit() {
                var data = {"username": username.value, "password": password.value };
                fetch("/login", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(data)
                }).then(response => response.json()).then(result => {if (result.status==200) location.href='/'; else message.innerText = result.message});
            }

